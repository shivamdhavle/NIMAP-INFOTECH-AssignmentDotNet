@model IEnumerable<AssignmentDotNet.Models.Category>

@{
    ViewData["Title"] = "GetCategory";
}

<h1>GetCategory</h1>

<p>
    <a asp-action="PostCategory">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryId)
                </td>
            <td>
                <a asp-action="EditCategory" asp-route-id="@item.CategoryId">Edit</a> |
                <a asp-action="DeleteCategory" asp-route-id="@item.CategoryId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<div class="pagination">
    @if (ViewBag.CurrentPage > 1)
    {
        <a asp-action="GetCategory" asp-route-page="@(ViewBag.CurrentPage - 1) ">Previous</a>
    }

    @for (int i = 1; i <= ViewBag.TotalPages; i++)
    {
        if (i == ViewBag.CurrentPage)
        {
            <strong>@i</strong>
        }
        else
        {
            <a asp-action="GetCategory" asp-route-page="@i">@i</a>
        }
    }

    @if (ViewBag.CurrentPage < ViewBag.TotalPages)
    {
        <a asp-action="GetCategory" asp-route-page="@(ViewBag.CurrentPage + 1) ">Next</a>
    }
</div>